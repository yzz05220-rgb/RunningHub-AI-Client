// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "cn.runninghub.ai-client",
  "productName": "RunningHub AI",
  "copyright": "Copyright Â© 2026 RunningHub",
  "asar": true,
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/rh.png"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "src-tauri/icons/icon.ico",
    "artifactName": "RunningHub-AI-${version}-Setup.${ext}",
    "signAndEditExecutable": false,
    "publisherName": "RunningHub",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "installerIcon": "src-tauri/icons/icon.ico",
    "uninstallerIcon": "src-tauri/icons/icon.ico",
    "installerHeaderIcon": "src-tauri/icons/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "RunningHub AI"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "src-tauri/icons/icon.icns",
    "artifactName": "RunningHub-AI-Mac-${arch}-${version}.${ext}"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "src-tauri/icons/icon.png",
    "artifactName": "RunningHub-AI-Linux-${version}.${ext}",
    "category": "Utility"
  }
}
