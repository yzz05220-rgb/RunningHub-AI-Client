{
  "name": "runninghub-ai-client",
  "productName": "RunningHub AI",
  "private": true,
  "version": "1.4.3",
  "main": "electron/main.js",
  "description": "RunningHub AI Client - 桌面端应用",
  "author": "yzz05220-rgb",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:publish": "vite build && electron-builder --publish always"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.runninghub.ai.client",
    "productName": "RunningHub AI",
    "copyright": "Copyright © 2026 RunningHub AI Team",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RunningHub AI"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yzz05220-rgb",
        "repo": "RunningHub-AI-Client"
      }
    ]
  }
}